<div class="large-9 columns" role="content">
  <h3><%= @curso.nome %></h3>

  <div class="row">
    <div class="large-6 columns">
      <%= image_tag @curso.imagem_url(:thumb) if @curso.imagem? %>
    </div>
    <div class="large-6 columns">
      <p><%= @curso.descricao %></p>
    </div>
  </div>
  <div data-alert="" class="alert-box success round">
    Valor: <%= em_reais(@curso.preco) %>
  </div>
  
  <hr/>
  
  <h4>Ementa:</h4>
  <p><%= @curso.ementa.html_safe %></p>
</div>
<!-- Sidebar -->
<aside class="large-3 columns panel">
  <h5>Cursos</h5>
  <ul class="side-nav">
    <% Curso.all.each do |curso| %>
      <li><a href="#"><%= curso.nome %></a></li>
    <% end %>
  </ul>
</aside>
<!-- End Sidebar -->
