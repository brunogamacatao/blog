<!-- Main Blog Content -->
<div class="large-9 columns" role="content">
  <% @cursos.each do |curso| %>
    <article class="">
      <h3><a href="#"><%= curso.nome %></a></h3>

      <div class="row">
        <div class="large-6 columns">
          <p><%= curso.descricao %></p>
        </div>
        <div class="large-6 columns">
          <%= image_tag curso.imagem_url(:thumb) if curso.imagem? %>
        </div>
      </div>
      <p>
        <%= form_for(Matricula.new) do |f| %>
          <%= f.hidden_field :curso_id, :value => curso.id %>
          <%= button_tag(type: 'submit', class: "button round small") do %>
            <i class="foundicon-cart"></i>&nbsp;Matricule-se</a>&nbsp;
          <% end %>
          <a href="#" class="button round small"><i class="foundicon-plus"></i>&nbsp;Ver Mais</a>
        <% end %>
      </p>
    </article>
    <hr/>
  <% end %>
</div>
<!-- End Main Content -->

<!-- Sidebar -->
<aside class="large-3 columns panel">
  <h5>Cursos</h5>
  <ul class="side-nav">
    <% Curso.all.each do |curso| %>
      <li><a href="#"><%= curso.nome %></a></li>
    <% end %>
  </ul>
</aside>
<!-- End Sidebar -->
